{
    "plugins": ["mocha"],
    "extends": ["airbnb-base", "plugin:mocha/recommended", "plugin:prettier/recommended"],
    "env": {
        "browser": true,
        "node": true,
        "mocha": true
    },
    "rules": {
        "no-unused-expressions": [
            "error",
            {
                "allowShortCircuit": true,
                "allowTernary": true
            }
        ]
    }
}
